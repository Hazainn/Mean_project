extends layout

block content
	script(src='/javascripts/UserTables.js')

		h1= title
	p Welcome to our test


	#wrapper
		h2 User List
		#userList
			table
				thead
					th UserName
					th Email
					th Gender
					th Delete
					th Update
				tbody
		
		h2 Add User
		#add_user
			fieldset
				input#Lastname(type='text', placeholder='Lastname')
				input#Firstname(type='text', placeholder='Firstname')
				br
				input#email(type='text', placeholder='email')
				input#gender(type='text', placeholder='gender')
				br
				button#AddUser Add User

		h2 Add Article
		#add_article
			fieldset
				input#title(type='text', placeholder='Title')
				br
				br
				textarea#content(type='text', placeholder='Post you article')
				br
				button#post_art Add Article

		h2 Article List
		#articleList
			table
				thead
					th Title
					th Content
				tbody